// prisma/schema.prisma

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

enum RequestStatus {
    pending
    inProgress
    completed
}

enum FileType {
    pdf
    image
}

model Department {
    id            String        @id @default(uuid())
    name          String
    totalRequests Int           @default(0)
    requests      Request[]
    users         User[]
    RequestType   RequestType[]
}

model RequestType {
    id            String     @id @default(uuid())
    name          String
    totalRequests Int        @default(0)
    department    Department @relation(fields: [departmentId], references: [id])
    requests      Request[]
    users         User[]
    departmentId  String
}

model User {
    id               String       @id @default(uuid())
    name             String
    phone            String       @unique()
    departmentId     String?
    department       Department?  @relation(fields: [departmentId], references: [id])
    totalRequests    Int          @default(0)
    password         String
    isAdmin          Boolean
    assignedRequests Request[]    @relation("UserAssignedRequests")
    RequestType      RequestType? @relation(fields: [requestTypeId], references: [id])
    requestTypeId    String?
}

model Request {
    id            String                 @id @default(uuid())
    requestNumber String
    studentName   String
    phone         String
    message       String
    createdAt     String
    createdAtDate String
    status        RequestStatus
    departmentId  String
    assignedToId  String?
    department    Department             @relation(fields: [departmentId], references: [id])
    assignedTo    User?                  @relation("UserAssignedRequests", fields: [assignedToId], references: [id])
    files         RequestFile[]
    statusHistory RequestStatusHistory[]
    RequestType   RequestType?           @relation(fields: [requestTypeId], references: [id])
    requestTypeId String?
}

model RequestFile {
    id      String    @id @default(uuid())
    name    String
    type    FileType
    url     String
    request Request[]
}

model RequestStatusHistory {
    id        String        @id @default(uuid())
    status    RequestStatus
    date      DateTime
    comment   String?
    request   Request       @relation(fields: [requestId], references: [id])
    requestId String
}
